<% provide(:title, "サインイン") %>
<h1>サインイン</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_tag sessions_path do %>

			<%= label_tag :email %>
			<%= text_field_tag :email %>

			<%= label_tag :password %>
			<%= password_field_tag :password %>

			<%= submit_tag "サインイン", class: "btn btn-large btn-primary" %>
		<% end %>

		<p>新規ユーザの場合、<%= link_to "ユーザ登録", signup_path %>へ</p>
	</div>
</div>