<% provide(:title, "サインイン") %>
<h1>サインイン</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(:session, url: sessions_path) do |f| %>

			<%= f.label :email %>
			<%= f.text_field :email %>

			<%= f.label :password %>
			<%= f.password_field :password %>

			<%= f.submit "サインイン", class: "btn btn-large btn-primary" %>
		<% end %>

		<p>新規ユーザの場合、<%= link_to "ユーザ登録", signup_path %>へ</p>
	</div>
</div>