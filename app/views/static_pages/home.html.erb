<% if signed_in? %>
	<div class="row">
		<aside class="span4">
			<section>
				<%= render 'shared/user_info' %>
			</section>
			<section>
				<%= render 'shared/stats' %>
			</section>
			<section>
				<%= render 'shared/micropost_form' %>
			</section>
		</aside>
		<div class="span8">
			<h3>フィード一覧</h3>
			<%= render 'shared/feed' %>
		</div>
	</div>
<% else %>
	<div class="center hero-unit">
		<h1>MPosterへようこそ</h1>

		<h2>Twitterのクローン</h2>

		<p>
			Twitter同様にツイート、フォローなどの機能があります。<br />
			より詳細な機能については、<%= link_to "ヘルプ", help_path %>をご覧下さい。
		</p>

		<%= link_to "MPosterへ登録する", signup_path, class: "btn btn-large btn-warning", style: "color:black;" %>
		<span style="padding: 30px;"></span>
		<%= link_to "ログイン", signin_path, class: "btn btn-large btn-success" %>
	</div>
<% end %>